{
    "version": 2,
    "builds": [
      { 
        "src": "frontend/dist/**",
        "use": "@vercel/static"
      },
      { 
        "src": "backend/dist/**",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/dist/index.js" },
      { "src": "/(.*)", "dest": "frontend/dist/$1" }
    ]
  }